# PRISM POC 환경 변수 (Local sLLM)

# ========================================
# Local sLLM 설정 (Ollama)
# ========================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2-vision:11b

# ========================================
# VLM 프로바이더 선택
# ========================================
DEFAULT_VLM_PROVIDER=local_sllm

# ========================================
# 파일 제한
# ========================================
MAX_FILE_SIZE_MB=10
MAX_PAGES=20

# ========================================
# 로그 설정
# ========================================
LOG_LEVEL=INFO

# ========================================
# Element 분류 설정
# ========================================
ENABLE_AUTO_CLASSIFICATION=true
MIN_CONFIDENCE_THRESHOLD=0.6

# ========================================
# 품질 평가 설정
# ========================================
ENABLE_QUALITY_VALIDATION=true

